<div class="row">
    <% for(var i = 0; i < aboutUsPageData.length; i++) { var section = aboutUsPageData[i];  %>
    <div class="card">
        <div class="section">
            <h3 class="doc"><%=section.title%></h3>
        </div>
        <% if(section.mediaType == 'image') { %>
        <img class="section media" src="<%=section.content%>" alt="<%=section.title%>">
        <% } else if(section.mediaType == 'video') { %>
        <iframe class="section media" width="1280" height="720" src="<%=section.content%>"></iframe>
        <% } %>
    </div>
    <% } %>
</div>

<div style="height: 100px;"></div>